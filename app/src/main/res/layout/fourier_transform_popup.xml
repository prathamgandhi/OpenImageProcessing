<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/phasetext"
        android:layout_width="193dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Phase"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Amplitude"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/phase"
        android:layout_width="197dp"
        android:layout_height="203dp"
        android:layout_marginBottom="624dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- tools:srcCompat="@tools:sample/avatars"  -->

    <ImageView
        android:id="@+id/Amplitude"
        android:layout_width="197dp"
        android:layout_height="203dp"
        android:layout_marginBottom="344dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phase"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Amplitudetext"
        android:layout_width="193dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="Amplitude"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/Amplitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phase"
        tools:srcCompat="@tools:sample/avatars" />



    <Button
        android:id="@+id/merge2images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Merge two images using FFT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phasetext" />

    <Button
        android:id="@+id/convtheorem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Using Convolution Theorem"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merge2images" />

</androidx.constraintlayout.widget.ConstraintLayout>